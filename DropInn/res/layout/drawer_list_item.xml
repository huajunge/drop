<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >
    
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="20dp"
    android:id="@+id/rlheader"    
    android:background="#EDEFEC">
    <ImageView
        android:id="@+id/profile_image"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/nav_profileimage"/>
        
      
       
        
        
     
  
</RelativeLayout>

     <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:id="@+id/set"
    android:layout_below="@+id/rlheader">

   
    <ImageView
        android:id="@+id/settings2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/settings1"
        
        /> 
        
    <ImageView
        android:id="@+id/settings3"
        
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
       
        android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
        android:background="@drawable/ver_line"/>
        
        
        
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:layout_below="@+id/settings2"
           
       
            android:background="@drawable/h_line" /> 
        
      
    </RelativeLayout>
 
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"    
   android:background="@drawable/list_selector"

    android:id="@+id/rlRow">

    <com.cog.DropInn.ThonTextView
        android:id="@+id/title"
         android:fontFamily="fonts/Thonburi.ttf" 
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="15dp"
        android:textColor="#565a5c" />
    
    <com.cog.DropInn.ThonTextView
        android:id="@+id/counter"
         android:fontFamily="fonts/Thonburi.ttf" 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/title"
        android:background="#FFFFFF"
        android:paddingBottom="20dp"
        android:textColor="@color/counter_text_color" />

    </RelativeLayout>
    
</RelativeLayout>