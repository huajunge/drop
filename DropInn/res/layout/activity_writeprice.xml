<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desc_bg"
    tools:context="com.cog.DropInn.Writeprice" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/desc_header" />

    <com.cog.DropInn.ThonTextView
        android:id="@+id/TextView2"
          android:fontFamily="fonts/Thonburi.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Price per night"
        android:textColor="#666666"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText1"
          android:fontFamily="fonts/Thonburi.ttf"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_below="@+id/TextView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/desc_edit"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="number"
      
        android:paddingLeft="35dp"
        android:textColorHint="#b5b5b5" >

        <requestFocus />
    </EditText>

    <com.cog.DropInn.ThonTextView
        android:id="@+id/imageView2"
          android:fontFamily="fonts/Thonburi.ttf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignTop="@+id/editText1"
        android:layout_marginTop="18dp"
        android:text="$" 
     android:textAlignment="center"
     android:gravity="center"
        android:textSize="25dp"/>
    
     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imageView1"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:padding="15dp"
         android:background="@drawable/color_cursor"
         android:src="@drawable/done" />
    

</RelativeLayout>