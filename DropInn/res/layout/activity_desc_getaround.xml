<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desc_bg"
    tools:context="com.cog.DropInn.Desc_getaround" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/desc_header" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:background="@drawable/desc_edit"
        android:ems="10"
        android:hint="Is there convienient public transit?"
        android:maxLength="35"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:textColorHint="#b5b5b5"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="17sp" />

    <com.cog.DropInn.ThonTextView
        android:id="@+id/TextView2"
        android:fontFamily="fonts/Thonburi.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Getting Around"
        android:textColor="#666666"
        android:textStyle="bold"
        android:textSize="20sp" />
 <ImageView
         android:id="@+id/imageView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imageView1"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:padding="15dp"
         android:background="@drawable/color_cursor"
         android:src="@drawable/done" />
    </RelativeLayout>