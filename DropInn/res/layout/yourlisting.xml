<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:background="#ffffff" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/list_image"
        android:layout_width="120dip"
        android:layout_height="80dip"
        android:background="@drawable/photo" />

    <!-- title1 Of Song -->


    <!-- country1 Name -->


    <!-- Rightend Duration -->


    <!-- Rightend Arrow -->

    <com.cog.DropInn.ThonTextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:fontFamily="fonts/Thonburi.ttf" 
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/list_image"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/list_image"
        android:ellipsize="end"
        android:text="title1 of the list"
        android:textColor="#040404"
       
       
        />

    <com.cog.DropInn.ThonTextView
        android:id="@+id/roomtype1"
         android:fontFamily="fonts/Thonburi.ttf" 
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignBaseline="@+id/TextView1"
        android:layout_alignBottom="@+id/TextView1"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/TextView1"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:text="Room type" />

    <com.cog.DropInn.ThonTextView
        android:id="@+id/TextView1"
         android:fontFamily="fonts/Thonburi.ttf" 
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/list_image"
        android:layout_alignLeft="@+id/title1"
        android:ellipsize="end"
        android:text="Incomplete ."
        android:textColor="#FF1919" />

</RelativeLayout>