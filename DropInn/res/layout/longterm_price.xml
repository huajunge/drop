<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.cog.DropInn.Longterm_price" >

    <com.cog.DropInn.ThonTextView
        android:id="@+id/TextView1"
         android:fontFamily="fonts/Thonburi.ttf" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
       
        android:text="Long-Term Prices"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/desc_header" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:src="@drawable/done"
        android:background="@drawable/color_cursor"
        android:padding="15dp"
        android:textColor="#FF1919" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView1" >

        <com.cog.DropInn.ThonTextView
            android:id="@+id/TextView2"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="55dp"
            android:text="Offer a weekly price"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText1"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/TextView2"
            android:layout_below="@+id/checkBox1"
            android:layout_marginTop="21dp"
            android:background="@drawable/header_5"
           
            android:focusable="true"
            android:focusableInTouchMode="true"
         
            android:inputType="numberDecimal"
            
            android:paddingLeft="25dp"
            android:textColorHint="#b5b5b5"
            >


        </EditText>

        <com.cog.DropInn.ThonTextView
            android:id="@+id/TextView6"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignLeft="@+id/editText1"
            android:layout_alignTop="@+id/editText1"
         
            android:gravity="center"
            
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.cog.DropInn.ThonTextView
            android:id="@+id/TextView4"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkBox2"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/editText1"
            android:layout_toRightOf="@+id/editText1"
    
            android:gravity="center"
            android:text="per week"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/TextView2"
            android:layout_marginRight="27dp"
            android:textColorHighlight="#28FF28" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView3"
            android:layout_alignBottom="@+id/TextView3"
            android:layout_alignLeft="@+id/checkBox1" />

        <com.cog.DropInn.ThonTextView
            android:id="@+id/TextView3"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView2"
            android:layout_below="@+id/TextView2"
            android:layout_marginTop="92dp"
            android:text="Offer a monthly price"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/EditText01"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="80dp"
            android:layout_height="50dp"
             android:layout_alignRight="@+id/TextView3"
            android:layout_below="@+id/checkBox2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:background="@drawable/header_5"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberDecimal"
         
            android:paddingLeft="25dp"
            android:textColorHint="#b5b5b5" >
           
            </EditText>

        <com.cog.DropInn.ThonTextView
            android:id="@+id/TextView5"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/EditText01"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/EditText01"
            android:layout_toRightOf="@+id/TextView3"
          
            android:gravity="center"
            android:text="per month"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.cog.DropInn.ThonTextView
            android:id="@+id/TextView01"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/EditText01"
            android:layout_alignLeft="@+id/EditText01"
            android:layout_alignTop="@+id/EditText01"
          
            android:gravity="center"
            
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</RelativeLayout>