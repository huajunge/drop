    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:animateLayoutChanges="true"
    tools:context="com.example.sas.Signin_singup" >
    
     <ImageView
        android:id="@+id/imageView6"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"        
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"       
        android:src="@drawable/loginpage" />
       
      <Button
        android:id="@+id/imageBack"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        
        android:textColor="#ffffff"
       android:layout_alignParentRight="true"
       android:layout_marginRight="5dp"
       android:layout_marginTop="5dp"
        android:background="@null" />
    
    <ImageButton
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:src="@drawable/back_arrow" /> 
        
     <com.cog.DropInn.ThonTextView
        android:id="@+id/ftext"
         android:fontFamily="fonts/Thonburi.ttf" 
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        android:shadowColor="@color/text_shadow"
        android:text="Quickly log in with:"
        android:textColor="#ffff" />
     
      <com.cog.DropInn.ThonTextView
        android:id="@+id/etext"
         android:fontFamily="fonts/Thonburi.ttf" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        android:shadowColor="@color/text_shadow"
        android:text="Or use your email"
        android:textSize="16dp"
        android:textColor="#ffff" />
      
      <EditText
            android:id="@+id/cText1"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/etext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
          
            android:paddingLeft="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:focusable="false"
            android:textAlignment="center"
            android:singleLine="true" />
      
       <com.cog.DropInn.ThonTextView
        android:id="@+id/TextView1"
         android:fontFamily="fonts/Thonburi.ttf" 
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
         android:layout_marginBottom="15dp"
        
     
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="By signing up,I agree to DropInn"
        android:textAlignment="center"
        android:textColor="#ffffff">
          
      </com.cog.DropInn.ThonTextView>
      
   <ImageButton
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:src="@drawable/back_arrow"
        android:visibility="invisible" /> 

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="invisible" >

        <EditText
            android:id="@+id/editText1"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            
            android:singleLine="true" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00"
            android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
            android:background="@drawable/h_line" />

        <EditText
            android:id="@+id/editText2"
             android:fontFamily="fonts/Thonburi.ttf" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="30"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00"
            android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
            android:background="@null" />

