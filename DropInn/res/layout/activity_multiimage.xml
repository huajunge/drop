<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.cog.DropInn.Multiimage"
    android:background="@drawable/desc_bg" >

    

<RelativeLayout
    android:id="@+id/R1"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/desc_header" >

    <Button
        android:id="@+id/button1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="42dp"
        android:background="@drawable/gallery" />

    <ImageButton
        android:id="@+id/TextView1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:src="@drawable/backarrow" />

    <Button
        android:id="@+id/button2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/button1"
        android:background="@drawable/camera" />

    <com.cog.DropInn.ThonTextView
        android:id="@+id/TextView4"
          android:fontFamily="fonts/Thonburi.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/TextView3"
        android:text=" photos" />

    <com.cog.DropInn.ThonTextView
        android:id="@+id/TextView3"
          android:fontFamily="fonts/Thonburi.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView4"
        android:layout_alignBottom="@+id/TextView4"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/TextView1"
        android:text="0"
        android:textColor="#666666" />

</RelativeLayout>

<com.cog.DropInn.ThonTextView
    android:id="@+id/TextView2"
      android:fontFamily="fonts/Thonburi.ttf"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/R1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="12dp"
    android:text="Add Photos to your listing"
    android:textColor="#666666"
    android:textSize="25sp"
    android:textStyle="bold" />
<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/R1">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/TextView2" >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignTop="@+id/imageView4"
        android:layout_below="@+id/imageView2"
        android:background="@drawable/bg_img" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_below="@+id/imageView1"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_img" />


    
     

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
         android:layout_height="200dp"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="45dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:background="@drawable/bg_img" />

     <ImageView
         android:id="@+id/imageView4"
         android:layout_width="150dp"
         android:layout_height="100dp"
         android:layout_alignLeft="@+id/imageView2"
         android:layout_below="@+id/imageView2"
         android:layout_marginTop="67dp"
         android:background="@drawable/bg_img" />

     <ImageView
         android:id="@+id/imageView2"
         android:layout_width="150dp"
         android:layout_height="100dp"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/imageView1"
         android:layout_marginTop="44dp"
         android:layout_marginLeft="15dp"
         android:background="@drawable/bg_img" />

     <ImageView
         android:id="@+id/imageView6"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_alignRight="@+id/imageView1"
         android:layout_alignTop="@+id/imageView1"
         android:src="@drawable/delete" />
      <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignTop="@+id/imageView2"
        android:src="@drawable/delete" />
     <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignTop="@+id/imageView3"
        android:src="@drawable/delete" />
     <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignTop="@+id/imageView4"
        android:src="@drawable/delete" />
     <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imageView5"
        android:layout_alignTop="@+id/imageView5"
        android:src="@drawable/delete" />

     <com.cog.DropInn.ThonTextView
         android:id="@+id/TextView5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imageView11"
         android:layout_centerHorizontal="true"
         android:text="Remove"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#666666"
         android:textSize="20sp" />

     <ImageView
         android:id="@+id/imageView11"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:layout_alignParentTop="true"
         android:layout_toLeftOf="@+id/TextView5"
        android:layout_marginRight="8dp"
         android:src="@drawable/dustbin" />

</RelativeLayout>
</ScrollView>
</RelativeLayout>